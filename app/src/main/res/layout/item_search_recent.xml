<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp">


    <ImageView
        android:id="@+id/ivDongHo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/search_ic_clock"></ImageView>

    <TextView
            android:id="@+id/tvMonAnDaTim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivDongHo"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="Mon an da duoc tim kiem"
            android:textSize="18dp">

        </TextView>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignRight="@+id/tvMonAnDaTim"
        android:src="@drawable/search_im_clear">

    </ImageView>


</RelativeLayout>