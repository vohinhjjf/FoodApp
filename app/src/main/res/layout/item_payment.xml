<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgFood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/pho_bo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvNameFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pho bo"
            android:textColor="@color/black"
            android:textSize="9pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDiscountFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50.000đ"
            android:textColor="@color/red"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPriceFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="68.000đ"
                android:textColor="#8C8B8B"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvDiscountPercentFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="15%"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="14dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số lượng: "
                android:textColor="#8C8B8B"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvSoLuong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>